<h1>Welcome to the Task List</h1>

<p>Here are your tasks:</p>

<ul>
  <% @tasks.each do|task| %>
  <li><input type="checkbox"><%= link_to task.title, task_path(task) %>
  <%= link_to "Delete",
  task_path(task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>

  </li>
  <% end %>

</ul>
