<div class="m-3">
  <h1>Welcome to the Task List</h1>

  <p>Here are your tasks:</p>

  <div>
      <ul class="list-unstyled">
        <% @tasks.each do|task| %>
        <li><input type="checkbox" class="me-3"><%= link_to task.title, task_path(task) %>
        <%= link_to "Delete",
        task_path(task),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
        %></li>
        <% end %>
      </ul>
  </div>

</div>
